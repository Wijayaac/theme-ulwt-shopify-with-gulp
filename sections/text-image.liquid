{%- style -%}
  #shopify-section-{{ section.id }} .text-image__wrapper::before {
    opacity: {{ section.settings.image_overlay | divided_by: 100.0 }};
  }
{%- endstyle -%}
<div class="text-image__wrapper text-image__wrapper--{{ section.settings.image_height }}">
  <div class="text-image__background">
    {% if section.settings.image %}
      {%- liquid
        assign image_height = section.settings.image.width | divided_by: section.settings.image.aspect_ratio
      -%}
      {{
        section.settings.image
        | image_url: width: 3840
        | image_tag:
          loading: 'lazy',
          width: section.settings.image.width,
          height: image_height,
          class: 'content text-image__asset',
          sizes: '100vw',
          widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
      }}
    {% else %}
      {{ 'lifestyle-2' | placeholder_svg_tag: 'content text-image__asset text-image__asset--placeholder' }}
    {% endif %}
  </div>
  <div class="container">
    <div class="text-image__text">
      {% if section.settings.description != blank %}
        <p>{{ section.settings.description }}</p>
      {% endif %}
      {% if section.settings.heading != blank %}
        <h1>{{ section.settings.heading }}</h1>
      {% endif %}
      {% comment %} Check if social media is available {% endcomment %}
      {% if settings.social_media %}
        <ul class="text-media__social social-media">
          {% for item in settings.social_media %}
            {% comment %} Render social media item {% endcomment %}
          {% endfor %}
        </ul>
      {% endif %}
    </div>
  </div>
  {% if section.settings.enable_scroll_instruction %}
    <div class="container">
      <div class="text-image__tip">
        <span>
          {% render 'icon-mouse' %}
        </span>
        <p>Explore Product</p>
      </div>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Text Image",
  "class": "text-image page-width",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Section Background Image"
    },
    {
      "type": "select",
      "id": "image_height",
      "options": [
        {
          "value": "adapt",
          "label": "Adapt"
        },
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "full",
          "label": "Full height"
        }
      ],
      "default": "medium",
      "label": "Section Height",
      "info": "Height of the section"
    },
    {
      "type": "range",
      "id": "image_overlay",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "Image Overlay Opaxity",
      "default": 40
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Section Description"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading"
    },
    {
      "type": "checkbox",
      "id": "enable_scroll_instruction",
      "label": "Scroll Instruction",
      "info": "Check this option to show scroll more instruction element "
    },
    {
      "type": "text",
      "label": "Instruction Label",
      "id": "scroll_label"
    }
  ],
  "presets": [
    {
      "name": "Text Image"
    }
  ]
}
{% endschema %}
